<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#487F3E"
    tools:context=".EcoCategoria">


    <ImageButton
        android:id="@+id/Buttonback"
        android:layout_width="69dp"
        android:layout_height="51dp"
        android:background="#4CAF50"
        android:layout_margin="12sp"
        android:layout_gravity="end"
        android:contentDescription="TODO"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/btn_back"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="492dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Logotipo"
            android:layout_width="69dp"
            android:layout_height="51dp"
            android:src="@drawable/logo_white"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            android:layout_margin="12sp"
            android:layout_gravity="end"
            tools:layout_editor_absoluteY="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categorias"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:layout_margin="11dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="206dp" />
        <ImageView
            android:id="@+id/ivcate"
            android:layout_width="331dp"
            android:layout_height="170dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/categor"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            android:layout_margin="12sp"
            android:layout_gravity="center"
            tools:layout_editor_absoluteY="8dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2A2D32CC">

            <android.support.v7.widget.CardView
                android:id="@+id/ItemcatH"
                android:layout_width="345dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="9dp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="267dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registrar"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="28dp"
                    android:layout_margin="10dp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="206dp" />

                <EditText
                    android:id="@+id/etmat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="10dp"
                    android:drawablePadding="12dp"
                    android:hint="@string/hint_material"
                    android:drawableEnd="@drawable/btndown"
                    android:minHeight="48dp" />


                <EditText
                    android:id="@+id/etcant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginEnd="12dp"
                    android:drawablePadding="12dp"
                    android:hint="@string/hint_cantidad"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/etdes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="180dp"
                    android:layout_marginEnd="12dp"
                    android:drawablePadding="12dp"
                    android:hint="@string/hint_descripcion"
                    android:minHeight="48dp" />

                <Button
                    android:id="@+id/btnadd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="12dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="10dp"
                    android:background="#4BA83A"
                    android:text="@string/button_add"
                    android:textColor="#B2EBF2"
                    app:cardCornerRadius="20dp"
                    android:drawableStart="@drawable/addproduct"/>

            </android.support.v7.widget.CardView>


        </FrameLayout>

            <ImageView
                android:layout_width="370dp"
                android:layout_height="60dp"
                android:src="@drawable/recycle"
                />
        <TextView
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:textAlignment="center"
            android:text="Â© Grupo 8 - Desarrollo de App"
            android:textColor="#ffffff"/>

    </LinearLayout>

</RelativeLayout>